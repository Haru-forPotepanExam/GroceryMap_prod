<div class="profile_container">
  <nav>
    <button id="profile-button">プロフィール編集</button>
    <button id="account-button">アカウント編集</button>
  </nav>
  <div id="user-info">
    <div class="table_container">
      <div class="user_container">
        <h2>プロフィール</h2>
        <table>
          <tr>
            <th class="common_th">ユーザー名：</th>
            <td class="common_td"><%= @user.name %> </td>
          </tr>
          <tr>
            <th class="common_th">メールアドレス：</th>
            <td class="common_td"><%= @user.email %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
    
    <div id="user_content">
      <%= render 'users/registrations/edit' %>
      <%= render 'users/registrations/edit_account' %>
    </div>


  <%= javascript_pack_tag 'users' %>

</div>
