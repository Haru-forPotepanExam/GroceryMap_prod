<div class="store_container">
  <div class="store-search">
    <div id="findstores">ストアを検索:</div>

    <div id="locationField">
      <input id="autocomplete" placeholder="店名、または最寄りの駅名を入力してください" type="text" />
    </div>
  </div>

  <div class="map_container">
    <div id="map"></div>

    <div id="listing">
      <table id="resultsTable">
        <tbody id="results"></tbody>
      </table>
    </div>
  </div>

  <div style="display: none">
    <div id="info-content">
      <table>
        <tr id="iw-url-row" class="iw_table_row">
          <td id="iw-icon" class="iw_table_icon"></td>
          <td id="iw-url"></td>
        </tr>
        <tr id="iw-address-row" class="iw_table_row">
          <td class="iw_attribute_name">住所：</td>
          <td id="iw-address"></td>
        </tr>
        <tr id="iw-phone-row" class="iw_table_row">
          <td class="iw_attribute_name">電話番号：</td>
          <td id="iw-phone"></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'stores' %>
<script  async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&callback=initMap&libraries=places&v=weekly"></script>
